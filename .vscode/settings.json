{
  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },
  "cSpell.ignorePaths": [
    "package-lock.json"
  ],
  "cSpell.words": [
    "Anson",
    "basenames",
    "claude",
    "davidanson",
    "dbaeumer",
    "devcontainers",
    "dotglob",
    "ecdsa",
    "esbenp",
    "factoriomod",
    "gemini",
    "justarandomgeek",
    "kohler",
    "Koihik",
    "Liskov",
    "nullglob",
    "redhat",
    "richie",
    "shellcheck",
    "sumneko",
    "timonwong",
    "webp"
  ],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "files.associations": {
    "LICENSE": "plaintext"
  },
  "git.inputValidation": true,
  "git.inputValidationLength": 72,
  "git.inputValidationSubjectLength": 60,
  "markdownlint.severityForWarning": "Hint"
}
